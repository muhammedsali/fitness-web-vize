@if (Membership != null)
{
    <div class="membership-details">
        <div class="details-header">
            <h2>@Membership.Name</h2>
            <div class="details-price">@Membership.Price.ToString("C")</div>
        </div>
        <div class="details-info">
            <div class="info-item">
                <span class="info-label">Süre:</span>
                <span class="info-value">@Membership.DurationDays gün</span>
            </div>
            <div class="info-item">
                <span class="info-label">Üyelik Kodu:</span>
                <span class="info-value">@Membership.Id</span>
            </div>
        </div>
        <div class="details-features">
            <h3>Dahil Olan Özellikler:</h3>
            <ul>
                @foreach (var feature in Membership.Features)
                {
                    <li>@feature</li>
                }
            </ul>
        </div>
    </div>
}

@code {
    [Parameter]
    public Membership? Membership { get; set; }
}

